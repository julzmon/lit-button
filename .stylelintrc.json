{
  "extends": [
    "stylelint-config-recommended"
  ],
  "ignoreFiles": ["**/*.ts"],
  "rules": {
    "no-descending-specificity": null,
    "selector-type-no-unknown": [
      true,
      {
        "ignoreTypes": ["/^lit-/"]
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["host"]
      }
    ],
    "property-no-vendor-prefix": null,
    "value-no-vendor-prefix": null
  }
}